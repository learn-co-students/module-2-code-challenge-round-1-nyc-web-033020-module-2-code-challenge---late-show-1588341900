<%= form_for @guest do |f| %> 
    <div class="field"> 
        <%= f.label :name %> 
        <%= f.text_field :name %> 
    </div> 
    <div class="field"> 
        <%= f.label :occupation %> 
        <%= f.text_field :occupation %> 
    </div> 
    <div class="actions"> 
        <%= f.submit %> 
    </div> 
<% end %> 
