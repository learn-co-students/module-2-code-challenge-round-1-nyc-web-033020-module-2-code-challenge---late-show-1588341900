<h1>Creating Appearances</h1> 

<% if flash[:errors] %> 
    <% flash[:errors].each do |error| %> 
        <li><%= error %></li> 
    <% end %> 
<% end %> 

<%= form_for @appearance do |f| %> 
    <div class="field"> 
        <%= f.label :episode_id %> 
        <%= f.collection_select :episode_id, @episode, :id, :name %> 
    </div> 
    <div class="field"> 
        <%= f.label :guest_id %> 
        <%= f.collection_select :guest_id, @guest, :id, :name %> 
    </div> 
    <div class="field"> 
        <%= f.label :rating %> 
        <%= f.number_field :rating %> 
    </div> 
    <div class="actions"> 
        <%= f.submit %> 
    </div> 
<% end %> 