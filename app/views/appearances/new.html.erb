<h1>New Appearance!</h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for @appearance do |f| %>
    <%= f.label :episode %>
    <%= f.collection_select :episode_id, @episodes, :id, :number%> <br>

    <%= f.label :guest %>
    <%= f.collection_select :guest_id, @guests, :id, :name %> <br>

    <%= f.label :rating %>
    <%= f.number_field :rating%> <br>

    <%= f.submit "Submit Guest Appearance" %>
<% end %>