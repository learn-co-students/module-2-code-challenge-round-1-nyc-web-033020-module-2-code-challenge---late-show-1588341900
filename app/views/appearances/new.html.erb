<% if flash [:error]%>
<% flash[:error].each do |error| %>
<p><%= error %>
<% end %>
<% end %>

<h1>New Appearance</h1>



<%= form_for @appearance do |f| %>
    <%= f.label :rating %>
    <%= f.number_field :rating %>

    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, @episode, :id, :number %>

    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, @guest, :id, :name, %>

    <%= f.submit %>

<% end %>