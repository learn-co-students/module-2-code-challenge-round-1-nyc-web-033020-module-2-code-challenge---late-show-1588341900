<h1> Schedule Appearance </h1>
<%if flash[:errors] %>
<% flash[:errors].each do |e| %>
    <%= e%>
<% end %>
<% end %>
<%= form_for @appearance do |f| %>
    <%= f.label :numeric_rating %>
    <%= f.number_field :numeric_rating %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, @guests, :id, :name %>
    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, @episodes, :id, :date %>
    <%= f.submit %> 
    <% end %>

