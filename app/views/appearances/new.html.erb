<div class="container">
<h1> New Appearance Form </h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color: red; font-size: 20px;"> <%= error %> </p>
    <% end %>
<% end %>

<%= form_for @appearance do |f| %>

    <%= f.label :guest_id, "Select a Guest:" %>
    <%= f.collection_select :guest_id, @guests, :id, :name %>
    <br /><br />

    <%= f.label :episode_id, "Select an Episode:" %>
    <%= f.collection_select :episode_id, @episodes, :id, :date %>
    <br /><br />

    <%= f.label :rating, "Rate the appearance on a scale of 1 to 5:" %>
    <%= f.number_field :rating %>
    <br /><br />

    <%= f.submit %>

<% end %>
</div>