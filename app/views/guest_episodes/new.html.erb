<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <%= error %>
    <%end %>
<% end %>

<h1> New Guest Appearance!! </h1>

<%= form_for @guest_episode do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, @guests, :id, :name %>

    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, @episodes, :id, :name %>

    <%= f.label :numberic_rating %>
    <%= f.textfield :numberic_rating %>
    
    <%= f.submit %>
<% end %>