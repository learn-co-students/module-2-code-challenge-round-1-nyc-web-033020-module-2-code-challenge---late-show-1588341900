<h1>All Episodes</h1>
<div><%= link_to 'Create Episode', new_episode_path %></div> 
<br /> 
<table> 
  <thead> 
    <tr> 
      <th>Number</th> 
      <th>Date</th> 
      <th></th> 
    </tr> 
  </thead> 
  <tbody> 
    <% @episodes.each do |episode| %> 
      <tr> 
        <td><%= episode.number %></td> 
        <td><%= episode.date.strftime("%B %d, %Y") %></td> 
        <td> 
          <%= link_to 'View', episode %> |
          <%= link_to 'Edit', edit_episode_path(episode) %> |
          <%= link_to 'Delete', episode, method: :delete, data: { confirm: 'Are you sure you want to delete this episode?' }%> 
        </td> 
      </tr> 
    <% end %> 
  </tbody> 
</table> 


